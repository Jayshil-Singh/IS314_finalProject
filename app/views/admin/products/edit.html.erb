<%= form_with model: @product, url: admin_product_path(@product), local: true, html: { class: 'form-horizontal' } do |form| %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :name, class: 'control-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :description, class: 'control-label' %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :price, class: 'control-label' %>
          <%= form.number_field :price, step: 0.01, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :image, "Image", class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <% if @product.image.attached? %>
              <%= image_tag @product.image, class: 'img-thumbnail' %>
              <div class="mt-2">
                <%= link_to 'Remove Image', remove_image_admin_product_path(@product), method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to remove the image?' } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= form.label :gender, "Product Gender", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.select :gender, Product::GENDERS, { prompt: 'Select Gender' }, class: 'form-control' %>
      </div>
    </div>
    
    <h3 class="text-center text-red">Product Variants</h3>
    <table class="table table-bordered table-striped" id="variants-table">
      <thead class="bg-dark text-white">
        <tr>
          <th>Color</th>
          <th>Size</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= form.fields_for :variants do |variant_form| %>
          <tr class="variant-fields">
            <%= variant_form.hidden_field :_destroy %>
            <td><%= variant_form.text_field :color, class: 'form-control' %></td>
            <td><%= variant_form.text_field :size, class: 'form-control' %></td>
            <td><%= variant_form.number_field :quantity, class: 'form-control' %></td>
            <td>
              <%= link_to 'Remove', '#', class: 'remove_fields btn btn-danger btn-sm', data: { action: 'remove' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <button type="button" id="add-variant" class="btn btn-primary mb-4">Add Variant</button>

    <!-- Submit Button -->
    <div class="form-group text-center">
      <%= form.submit "Save Product", class: 'btn btn-success btn-lg' %>
    </div>
  </div>
  <style>
    .text-red {
      color: red;
    }

    .bg-dark {
      background-color: black;
    }

    .btn-primary {
      background-color: red;
      border-color: red;
    }

    .btn-primary:hover {
      background-color: black;
      border-color: black;
      color: red;
    }

    .btn-danger {
      background-color: black;
      border-color: black;
      color: red;
    }

    .btn-danger:hover {
      background-color: red;
      border-color: red;
      color: white;
    }

    .btn-success {
      background-color: black;
      border-color: black;
      color: white;
    }

    .btn-success:hover {
      background-color: red;
      border-color: red;
      color: white;
    }

    .table thead th {
      background-color: black;
      color: white;
    }

    .table tbody tr:nth-child(odd) {
      background-color: #f9f9f9;
    }

    .table tbody tr:nth-child(even) {
      background-color: #ffffff;
    }
  </style>

<% end %>
